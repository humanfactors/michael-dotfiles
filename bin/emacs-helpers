#!/usr/bin/env bash
# Checks if there's a frame open


emt() {
    TERM=xterm-256color
    emacs -q -nw $1
}

# This script is called "et" for "emacs terminal"
et() {
    TERM=xterm-256color
    exec emacsclient -a "" -t "$@"
}

em() {
    emacsclient -n -e "(if (> (length (frame-list)) 1) â€˜t)" 2> /dev/null | grep t &> /dev/null
    if [ $# -ne 0 ]; then
    emacsclient -a '' -c "$@"
    elif [ -n "$DISPLAY" ]; then
    emacsclient -c -n
    else
    emacsclient -c
    fi
}

